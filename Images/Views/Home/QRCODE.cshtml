@model Images.Picture

@{
    ViewBag.Title = "QRCODE";
    Layout = "~/Views/Shared/_LayoutAll.cshtml";
}

<main class="container">
    <br/>
    <br/>
    <div>

        <h4 class="input-group3">โปรดแสกน QR Code เพื่อชำระเงิน</h4>
        <hr />

        <dl class="input-group2">
            <dd>
                <img src=@Url.Content("~/Content/images/QR.png") style="width: 500px; height: 500px;" />
            </dd>
        </dl>
        <dl class="input-group1">
            <dd>
                <h5>
                    โปรดกด "ยืนยัน" เมื่อชำระเงินเเล้ว
                    @Html.HiddenFor(model => model.Pic_ID)
                </h5>

            </dd>
        </dl>
        <div class="d-grid gap-xl-5" style="margin-bottom:70px; margin-left:31% ; margin-top:-20px ; width:35%">

            @Html.ActionLink("ยืนยัน", "AddToMyLib", "UserCollections", new { idx = Model.Pic_ID, price = Model.Price, url = Model.url, type = Model.Type, name = Model.Name, size = Model.Size, desc = Model.Desc, email=Model.user_email }, new { @class = "btn btn-success" })

        </div>


    </div>

</main>
